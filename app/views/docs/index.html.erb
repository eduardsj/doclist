<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Doc", new_doc_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
    <thead>.
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Record Link</th>
            <th>Action</th>
        </tr>
   </thead>
   
   <tbody>
        <% @docs.each do |doc| %>  
            <tr>
                <td><%= doc.name %></td>
                <td><%= doc.description.from(0).to(30) %></td>
                <td><%= link_to "Detailed record", docs_path + "/#{doc.id}"  %></td>               
                <td><%= button_to "Delete",  doc, method: :delete, class: "btn btn-danger", confirm: "Vai tiešām dzēst dokumentu? #{doc.name}?" %></td>
             </tr>     
        <% end %>
   </tbody>
   
</table>